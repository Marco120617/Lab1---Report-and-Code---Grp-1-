def main():
   
    filename = input("Enter the filename: ")

    try:
       
        with open(filename, 'r') as file:
            lines = file.readlines()

        
        if not lines:
            print("The file is empty. Nothing to display.")
            return

        print(f"File '{filename}' loaded successfully!")

        print(f"The file has {len(lines)} lines.")

        while True:
         
            try:
                line_number = int(input("Enter a line number (0 to quit): "))
                if line_number == 0:
                    print("Thanks for using the program! Bye!")
                    break
                elif 1 <= line_number <= len(lines):
                    print(f"Line {line_number}: {lines[line_number - 1].strip()}")
                else:
                    print(f"Invalid line number. Choose a number between 1 and {len(lines)} only.")
            except ValueError:
                print("Oops! Please enter a valid number.")
    except FileNotFoundError:
        print("Error: File not found. Double-check the filename and try again.")
    except Exception as e:
        print(f"Something went wrong: {e}")

if __name__ == "__main__":
    main()
